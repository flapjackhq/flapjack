# Environment mode: "development" (default) or "production"
# production mode requires FLAPJACK_ADMIN_KEY and fails fast if missing
FLAPJACK_ENV=development

# Admin API key (required in production, optional in development)
# Must be at least 16 characters in production mode
# FLAPJACK_ADMIN_KEY=your-secret-key-here

# Server binding
FLAPJACK_BIND_ADDR=127.0.0.1:7700
FLAPJACK_DATA_DIR=./data

# Memory limits
FLAPJACK_MAX_BUFFER_MB=31
FLAPJACK_MAX_CONCURRENT_WRITERS=40
FLAPJACK_MAX_DOC_MB=3